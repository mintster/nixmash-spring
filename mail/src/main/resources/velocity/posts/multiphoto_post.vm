#* @vtlvariable name="post" type="com.nixmash.springdata.jpa.model.Post" *#
<div class="post note">
    <h3><a target="_blank"
           href="/posts/post/${post.postName}">${post.postTitle}</a></h3>
    <div class="post-content">${post.postContent}</div>
    <div class="post-photos">
        #foreach( $image in $post.postImages)
            <img src="${image.url}${image.thumbnailFilename}" alt=""
                 class="post-photo-thumbnail" />
        #end
    </div>
    <div class="post-footer">
        #parse("posts/inc/footer.vm")
    </div>
</div>
